@model BookDictionary.Models.Country

@{
    ViewData["Title"] = "Delete Country";
}

<div class="alert alert-danger" role="alert">
    @if (Model.Authers.Any())
    {
        <h3>You can't delete this Author because there is some authors associated with</h3>
    }
    else
    {
        <h3>Are you sure you want to delete this?</h3>
        <p>This action cannot be undone.</p>
    }
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h4>Country Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                Associated Authors
            </dt>
            <dd class="col-sm-9">
                @if (Model.Authers.Any())
                {
                    <ul class="list-unstyled">
                        @foreach (var author in Model.Authers)
                        {
                            <li>
                                <a asp-controller="Authers" asp-action="Details" asp-route-id="@author.Id">
                                    @author.Name
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <span>No authors associated.</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            @if (!Model.Authers.Any())
            {
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            }
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>