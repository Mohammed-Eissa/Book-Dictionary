@model BookDictionary.Models.Country

@{
    ViewData["Title"] = "Country Details";
}

<div class="jumbotron">
    <h1 class="display-4">Author Details</h1>
    <hr class="my-4">
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            Associated Authors
        </dt>
        <dd class="col-sm-9">
            @if (Model.Authers.Any())
            {
                <ul class="list-unstyled">
                    @foreach (var author in Model.Authers)
                    {
                        <li>
                            <a asp-controller="Authers" asp-action="Details" asp-route-id="@author.Id">
                                @author.Name
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>No authors associated.</span>
            }
        </dd>
    </dl>
    <hr class="my-4">
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>