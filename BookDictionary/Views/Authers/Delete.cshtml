@model BookDictionary.Models.Auther

@{
    ViewData["Title"] = "Delete Author";
}

<div class="alert alert-danger" role="alert">
    @if(Model.Books.Any())
    {
        <h3>You can't delete this Author because there is some books associated with</h3>
    }
    else
    {
        <h3>Are you sure you want to delete this?</h3>
        <p>This action cannot be undone.</p>
    }
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h4>Author Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-9">
                <a asp-controller="Countries" asp-action="Details" asp-route-id="@Model.CountryId">
                    @Html.DisplayFor(model => model.Country.Name)
                </a>
            </dd>
            <dt class="col-sm-3">
                Associated Books
            </dt>
            <dd class="col-sm-9">
                @if (Model.Books.Any())
                {
                    <ul class="list-unstyled">
                        @foreach (var book in Model.Books)
                        {
                            <li>
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">
                                    @book.Title
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <span>No books associated.</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            @if (!Model.Books.Any())
            {
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            }
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>